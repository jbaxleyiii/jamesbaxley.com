{
  "name": "jamesbaxley.com",
  "tasks": {
    "bower": {
      "out/packages": {
        "junction": "NewSpring/junction"
      },
      "vendor": {
        "mixins": "normajs/holtzmann-mixins",
        "framework": "normajs/holtzmann-framework"
      }
    },
    "sass": {
      "src": "raw/client/stylesheets/**/*",
      "dest": "out/client/stylesheets",
      "lint": true,
      "comb": true
    },
    "javascript": {
      "src": "raw/**/*",
      "dest": "out"
    },
    "markup": {
      "src": "raw/client/templates/**/*",
      "dest": "out/client/templates",
      "minify": false
    },
    "copy": {
      "src": "raw/public/**/*",
      "dest": "out/public"
    },
    "private": {
      "@extend": "copy",
      "src": "raw/private/**/*",
      "dest": "out/private"
    },
    "settings": {
      "@extend": "copy",
      "src": "./settings",
      "dest": "out/settings/",
      "ext": [
        "json"
      ]
    },
    "meteor": {
      "src": "out",
      "build": {
        "dest": "build",
        "server": "localhost:3000"
      },
      "packages": [
        "meteor-platform",
        "newspring:junction",
        "iron:router",
        "fastclick",
        "browser-policy",
        "raix:handlebar-helpers",
        "zimme:iron-router-auth",
        "meteorhacks:fast-render",
        "aldeed:collection2",
        "matb33:collection-hooks",
        "coffeescript",
        "cfs:standard-packages",
        "anti:fake",
        "aldeed:autoform",
        "manuelschoebel:ms-seo",
        "alanning:roles",
        "mizzao:user-status",
        "meteorhacks:kadira",
        "useraccounts:core",
        "useraccounts:unstyled",
        "accounts-password",
        "ryw:blog",
        "meteorhacks:kadira-profiler"
      ],
      "platforms": [
        "server",
        "browser",
        "ios"
      ]
    }
  },
  "test": {
    "before": "meteor run",
    "mocha-casperjs": {
      "src": "out/tests/**/*"
    },
    "after": "meteor close"
  },
  "server": {
    "port": "3000"
  }
}